<Window x:Class="Day07Sandwich.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Day07Sandwich"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
        Title="MainWindow" Height="250" Width="500">
    <StackPanel>
        <Label Height="50" />
        <Button x:Name="btMake" Content="Make a Sandwich" Click="ButtonMakeSandwich_Click" />
        <Label Content="Bread: " x:Name="lblBread"/>
        <Label Content="Veggies: " x:Name="lblVeggie"/>
        <Label Content="Meet: " x:Name="lblMeet"/>
    </StackPanel>
</Window>
